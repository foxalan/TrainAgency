<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/id_mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        >

        <LinearLayout

            android:id="@+id/id_maker_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_home_map_search_view" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_map_search_view"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_home_map_search_et"
                android:drawableLeft="@mipmap/ic_home_search"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|left"
                android:hint="搜索地点或小区"
                android:paddingLeft="30dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/lv_map_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tv_map_back"
        android:background="@drawable/bg_home_map_search_back"
        android:padding="2dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="{fa-angle-left}"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />


</RelativeLayout>
