<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="少儿美术培训班"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_class_name"
        tools:ignore="HardcodedText"
        />

    <android.support.v7.widget.AppCompatRatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_class_name"
        android:layout_marginTop="18dp"
        android:numStars="5"
        android:id="@+id/appCompatRatingBar" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_class_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_class_name"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/tv_class_like"
        android:layout_toStartOf="@+id/tv_class_like"
        android:text="浏览 387"
        android:textColor="@color/gray_text_light"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_class_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_class_browse"
        android:layout_alignBottom="@+id/tv_class_browse"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="关注 387"
        android:textColor="@color/gray_text_light"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_class_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/appCompatRatingBar"
        android:text=""
        android:textColor="@color/gray_text_light"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>